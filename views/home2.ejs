
<html>
    <head>
        <title> <%=locals.title%> </title>
        <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
        
        <script src="https://kit.fontawesome.com/4d6fcabd67.js" crossorigin="anonymous"></script>

        <link rel="stylesheet" href="/css/home2.css">
    </head>

    <body>
            <div id="app">
                <div id="heading">
                    <h1>TODO App</h1>
                </div>
                <div id="form">
                    <form action="/create-task" method="post">
                        <label for="des">Description</label>
                        <input id="des" name="description" class="width-100" type="text" placeholder="What do you need to do?">
                        <label for="category">Category</label>
                        <label for="date">Due Date</label>
                        <select class="width-50"  name="category" type="dropdown" id="category">
                            <option>PERSONAL</option>
                            <option>WORK</option>
                            <option>OTHER</option>
                        </select>
                        
                        <input id="date" name="due_date" class="width-50" type="date">
                        <button class="btn" id="btn1" type="submit">Add Task</button>
                    </form>
                </div>

                <div id="list">
                    <ul>
                        <% for( let i of todo_list){ %>
                            
                                <li>
                                    <!-- <input type="checkbox" name="cb" value="<%=i._id%>"> -->
                                    <p id="li-description"><%=i.description%></p>
                                    <p class='li' id="li-category"><%=i.category%></p>
                                    <p id="li-due-date"><i class="fa-solid fa-calendar-days"></i><%=i.dueDate%></p>
                                    <!-- <button class="btn" id="btn2" type="submit" formaction="/delete-task/?id=<%=i._id%>">Delete Task</button> -->
                                    <a href="/delete-task/?id=<%=i._id%>">  <i class="fa-solid fa-xmark"></i> </a>
                                </li>   
                            
                            <% } %>
                        </ul>
                    
                </div>

            </div>


            <script src="/js/home.js"></script>
    </body>


        
            
  