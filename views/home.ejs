
<html>
    <head>
        <title> <%=locals.title%> </title>
        
        <script src="https://kit.fontawesome.com/4d6fcabd67.js" crossorigin="anonymous"></script>

        <link rel="stylesheet" href="/css/home.css">
    </head>

    <body>
        
            
            <div id="form">

                <div class="heading">
                    <h1> TODO App</h1>
                </div>
                <form action="/create-task" method="post">
                    <div class="input">
                        <label for="description">Description</label>
                        <input name="description" id="description" type="text" placeholder="What do you need to do?" required>
                    </div>
                    <div class="input2">
                        <label for="category">Category</label> 
                        <select name="category" id="category" type="dropdown" required>
                            <option>Personal</option>
                            <option >work</option>

                        </select>
                    </div>
                    <div class="input2">
                        <label for="due_date">Due Date</label>
                        <input name="due_date" id="due_date" type="date" required>
                    </div>
                    <button class="btn">Add Task</button>
                    <!-- <button class="btn">Delete Tasks</button> -->
                </form>

            </div>

            <div class="list">
                <div class="heading">
                    <h1> TODO List</h1>
                </div>
                <ul>
                <% for( let i of todo_list){ %>
                    <div id="list">
                        <li>
                            <p id="li1"><%=i.description%></p>
                            <span id="li2"><%=i.category%></span>
                            <p id="li3"><%=i.dueDate%></p>
                            <a href="/delete-task/?id=<%=i._id%>">  <i class="fa-solid fa-xmark"></i> </a>
                        </li>   
                    </div>
                    <% } %>
                </ul>
            </div>

            
        
    </body>
</html>